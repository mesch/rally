<div id="bdw" class="bdw">
<div id="bd" class="cf">
<div>
    <div id="content" class="clear mainwide">
		<div class="box clear">
            <div class="box-top"></div>
            <div class="box-content">
                <div class="head">
                    <h2>Payments</h2>
				</div>
                <div class="sect">
					<table id="list" cellspacing="0" cellpadding="0" bpayment="0" class="general-table">
						<tr><th width="40">Id</th>
							<th width="60">User Id</th>
							<th width="60">Deal Id</th>
							<th width="200">Deal</th>							
							<th width="60">Order Id</th>
							<th width="60">Amount</th>							
							<th width="60">Gateway</th>
							<th width="60">Transaction Type</th>
							<th width="60">Confirmation Code</th>
							<th width="40">Created</th>							
						</tr>							
						<% for payment in @payments %>
						<tr>
							<td><%= payment.id %></td>
							<td><%= payment.user.id %></td>
							<td><%= payment.order.deal.id %></td>
							<td><%= payment.order.deal.title %></td>
							<td><%= payment.order.id %></td>
							<td><%= payment.amount.format %></td>
							<td><%= payment.gateway %></td>
							<td><%= payment.transaction_type %></td>
							<td><%= payment.confirmation_code %></td>
							<td><%= payment.created_at.strftime(OPTIONS[:date_format]) %></td>
						</tr>
						<% end %>
                    </table>
				</div>
            </div>
            <div class="box-bottom"></div>
        </div>
    </div>
</div>
</div> <!-- bd end -->
</div> <!-- bdw end -->