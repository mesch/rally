<div id="bdw" class="bdw">
<div id="bd" class="cf">
<div>
    <div id="content" class="clear mainwide">
		<div class="box clear">
            <div class="box-top"></div>
            <div class="box-content">
                <div class="head">
                    <h2>Orders</h2>
				</div>
                <div class="sect">
					<table id="list" cellspacing="0" cellpadding="0" border="0" class="general-table">
						<tr><th width="40">Id</th>
							<th width="40">User Id</th>
							<th width="40">Deal Id</th>
							<th width="300">Deal</th>
							<th width="40">Quantity</th>							
							<th width="40">Amount</th>
							<th width="40">Created</th>
							<th width="60">State</th>
						</tr>							
						<% for order in @orders %>
						<tr>
							<td><%= order.id %></td>
							<td><%= order.user.id %></td>
							<td><%= order.deal.id %></td>
							<td><%= order.deal.title %></td>
							<td><%= order.quantity %></td>
							<td><%= order.amount.format %></td>
							<td><%= order.created_at.strftime(OPTIONS[:date_format]) %></td>
							<td><%= order.state %></td>
						</tr>
						<% end %>
                    </table>
				</div>
            </div>
            <div class="box-bottom"></div>
        </div>
    </div>
</div>
</div> <!-- bd end -->
</div> <!-- bdw end -->