<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
	<meta http-equiv=content-type content="text/html; charset=UTF-8">
	<title><%= OPTIONS[:site_name] %></title>
	<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
	<!-- ><link rel="shortcut icon" href="/favicon.ico" /> -->
	<%= raw stylesheet_link_tag 'index.css', :media => "screen", :charset => "utf-8" %>	
	<script type="text/javascript">var WEB_ROOT = '';</script>
	<%= raw javascript_include_tag "index.js" %>
	<%= render :partial => 'layouts/block/google_analytics' %>
</head>
<body class="<%= request.method == 'index' ? 'bg-alt' : 'newbie' %>">
<div id="pagemasker"></div><div id="dialog"></div>
<div id="doc">
	<%= raw javascript_include_tag "xheditor/xheditor.js" %>	
	<div id="hdw">
		<div id="hd">
			<div id="logo">
			<%= link_to image_tag("logo_original.gif"), root_url, :class => "link", :target => "_blank" %>
			</div>
			<div class="guides">
				<div class="city">
					<h2>Admin</h2>
				</div>
			</div>
			<ul class="nav cf">
				<li <%= controller.controller_name == 'admin' ? 'class=current' : '' %> ><%= link_to "Home", admin_home_url %></li>
				<li <%= controller.controller_name == 'merchants' ? 'class=current' : '' %> ><%= link_to "Merchants", admin_merchants_url %></li>
				<li <%= controller.controller_name == 'users' ? 'class=current' : '' %> ><%= link_to "Users", admin_users_url %></li>
				<li <%= controller.controller_name == 'deals' ? 'class=current' : '' %> ><%= link_to "Deals", admin_deals_url %></li>
				<li <%= controller.controller_name == 'coupons' ? 'class=current' : '' %> ><%= link_to "Coupons", admin_coupons_url %></li>
				<li <%= controller.controller_name == 'orders' ? 'class=current' : '' %> ><%= link_to "Orders", admin_orders_url %></li>
				<li <%= controller.controller_name == 'payments' ? 'class=current' : '' %> ><%= link_to "Payments", admin_payments_url %></li>			
		</div>
	</div>

	<% if flash[:notice] %>
	<div class="sysmsgw" id="sysmsg-success"><div class="sysmsg"><p><%= flash[:notice] %></p><span class="close">Close</span></div></div>
	<% end %>
	<% if flash[:error] %>
	<div class="sysmsgw" id="sysmsg-error"><div class="sysmsg"><p><%= flash[:error] %></p><span class="close">Close</span></div></div> 
	<% end %>

	<%= yield %>
	
	<%= render :partial => 'layouts/block/footer' %>
</div>
</body>
</html>
