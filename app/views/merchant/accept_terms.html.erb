<%= form_tag :controller => :merchant, :action=>'accept_terms', :class=>"validator" %>

<div id="bdw" class="bdw">
<div id="bd" class="cf">
<div id="biz">
    <div id="content" class="biz">
        <div class="box">
            <div class="box-top"></div>
            <div class="box-content">
                <div class="head"><h2>Terms and Conditions</h2></div>
                <div class="sect">
						<div class="field">
							<div class="note">
								<%= check_box_tag :terms, 1, false %>
								I agree to the <%= link_to 'Terms and Conditions', merchant_terms_url, :target=>"_blank" %>.</div>
						</div>
                        <div class="act">
							<%= submit_tag :submit, :value=>"Accept", :class=>"formbutton"%>
                        </div>
                </div>
            </div>
            <div class="box-bottom"></div>
        </div>
    </div>
    <div id="sidebar">
	</div>
</div>
</div> <!-- bd end -->
</div> <!-- bdw end -->