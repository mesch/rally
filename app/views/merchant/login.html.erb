<%= form_tag :controller => :merchant, :action=>'login', :class=>"validator" %>

<div id="bdw" class="bdw">
<div id="bd" class="cf">
<div id="biz">
    <div id="content" class="biz">
        <div class="box">
            <div class="box-top"></div>
            <div class="box-content">
                <div class="head"><h2>Log In</h2></div>
                <div class="sect">
                        <div class="field">
                            <label for="username">Username</label>
							<%= text_field_tag :username, nil, :class=>"f-input", :datatype=>"require", :require=>"true" %>
                        </div>
                        <div class="field">
                            <label for="password">Password</label>
							<%= password_field_tag :password, nil, :class=>"f-input", :datatype=>"require", :require=>"true" %>
                        </div>
                        <div class="act">
							<%= submit_tag :submit, :value => 'Log In', :class=>"formbutton"%>
							<%= link_to 'Sign Up', merchant_signup_url %> |
						    <%= link_to 'Forgot my password', merchant_forgot_password_url %>
                         </div>
                </div>
            </div>
            <div class="box-bottom"></div>
        </div>
    </div>
    <div id="sidebar">
	</div>
</div>
</div> <!-- bd end -->
</div> <!-- bdw end -->